{% extends 'base.jinja2' %}

{% block title %}Login - {% endblock title %}

{% block content %}
{% if view.session.peek_flash(queue='error') %}
    {% include "success.jinja2" ignore missing %}
{% endif %}
<div class="row">
    <div class="col-md-6 offset-md-3 my-4">
        <div class="card">
            <div class="card-header">
                Login
            </div>
            <div class="card-body">
                <form action="{{ url }}" method="post">
                <div style="display: none;">
                        <input name="csrf_token" type="hidden" value="{{ view.session.get_csrf_token() }}" />
                </div>
                <div style="display: none;">
                        <input type="hidden" name="next" value="{{ next_url }}">
                </div>
                
                <div class="form-group">
                    <label for="login">Username:</label>
                    <input type="text" class="form-control" name="login" value="{{ login }}">
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password"  class="form-control" name="password">
                </div>
                <div class="form-group">
                    <button type="submit" name="form.submitted" value="Log In" class="btn btn-primary">Log In</button>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock content %}